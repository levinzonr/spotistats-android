<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.main.trackdetails.TrackDetailsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <cz.levinzonr.spotistats.presentation.views.ScoreItemView
            android:id="@+id/scoreEnergyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <cz.levinzonr.spotistats.presentation.views.ScoreItemView
            android:id="@+id/scoreLoudnessView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <cz.levinzonr.spotistats.presentation.views.ScoreItemView
            android:layout_width="wrap_content"
            android:id="@+id/scoreRythmView"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/scoreLoudnessView"
            app:layout_constraintStart_toEndOf="@+id/scoreEnergyView"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>