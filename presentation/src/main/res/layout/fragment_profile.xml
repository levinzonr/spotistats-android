<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.main.profile.ProfileFragment">


    <ImageView
        android:id="@+id/userAvaterIv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />


    <TextView
        android:id="@+id/userDisplayNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="TextView"
        android:textAppearance="?textAppearanceHeadline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAvaterIv" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/userFollowersCountTv"
        app:layout_constraintStart_toStartOf="@+id/userPlaylistsCountView"
        app:layout_constraintTop_toBottomOf="@+id/userFollowersCountTv">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">


            <ImageView
                android:id="@+id/trackImageIv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageButton
                android:id="@+id/trackPlayBtn"
                style="@style/ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/trackImageIv" />


            <TextView
                android:id="@+id/trackNameTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/trackImageIv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/trackArtistTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/trackNameTv"
                app:layout_constraintTop_toBottomOf="@+id/trackNameTv" />

            <ImageButton
                android:id="@+id/trackPreviousBtn"
                style="@style/ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_skip_previous"
                app:layout_constraintEnd_toStartOf="@+id/trackPlayBtn"
                app:layout_constraintTop_toTopOf="@+id/trackPlayBtn" />

            <ImageButton
                android:id="@+id/trackNextBtn"
                style="@style/ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_skip_next"
                app:layout_constraintStart_toEndOf="@+id/trackPlayBtn"
                app:layout_constraintTop_toTopOf="@+id/trackPlayBtn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/settingsBtn"
        style="@style/ProfileTextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_marginTop="16dp"
        app:icon="@drawable/ic_settings_black_24dp"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settingsBtn2"
        style="@style/ProfileTextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feedback"
        app:icon="@drawable/ic_feedback_black_24dp"
        app:layout_constraintTop_toBottomOf="@+id/settingsBtn"
        tools:layout_editor_absoluteX="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settingsBtn3"
        style="@style/ProfileTextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        app:icon="@drawable/ic_info_outline_black_24dp"
        app:layout_constraintTop_toBottomOf="@+id/settingsBtn2"
        tools:layout_editor_absoluteX="0dp" />

    <cz.levinzonr.spotistats.presentation.views.ScoreItemView
        android:id="@+id/userPlaylistsCountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userDisplayNameTv" />

    <cz.levinzonr.spotistats.presentation.views.ScoreItemView
        android:id="@+id/userFollowersCountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/userDisplayNameTv" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>