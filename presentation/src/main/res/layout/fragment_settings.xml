<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.main.settings.SettingsFragment">

    <TextView
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:padding="16dp"
        android:text="Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <cz.levinzonr.spoton.presentation.views.SettingsButtonView
        android:id="@+id/settingsDarkModeBtn"
        app:showSection="true"
        app:sectionIcon="@drawable/ic_baseline_brightness_6_24"
        app:sectionName="Appearence"
        android:layout_marginTop="8dp"
        app:text="Dark Mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/include_divider"/>

    <cz.levinzonr.spoton.presentation.views.SettingsButtonView
        android:id="@+id/settingsLogoutBtn"
        app:showSection="true"
        android:layout_marginTop="8dp"
        app:sectionIcon="@drawable/ic_person_black_24dp"
        app:sectionName="Account"
        app:text="Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/include_divider"/>

    <cz.levinzonr.spoton.presentation.views.SettingsButtonView
        android:id="@+id/settingsFeedbackBtn"
        app:showSection="true"
        android:layout_marginTop="8dp"
        app:sectionIcon="@drawable/ic_info_outline_black_24dp"
        app:sectionName="Application Info"
        app:text="About"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        layout="@layout/include_divider"/>

    <cz.levinzonr.spoton.presentation.views.SettingsButtonView
        android:id="@+id/settingsAboutBtn"
        app:showSection="false"
        app:text="Send Feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <include layout="@layout/include_divider"/>


</LinearLayout>